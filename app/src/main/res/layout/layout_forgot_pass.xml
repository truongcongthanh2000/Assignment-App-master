<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/img"
    android:paddingBottom="16dp"
    android:paddingTop="0dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".ForgotPassActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/size10dp"
        android:text="Change Password"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/lovepen"
        android:textColor="@color/colorWhite"
        android:textSize="70sp" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_EmailForgotPass"
        android:drawableLeft="@drawable/ic_email_black_36dp"
        android:drawablePadding="@dimen/size10dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Email"
        android:text=""
        android:layout_marginLeft="@dimen/size15dp"
        android:layout_marginRight="@dimen/size15dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="25sp"
        app:met_baseColor="@color/colorWhite"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorWhite"
        app:met_singleLineEllipsis="true"
        android:layout_marginTop="150dp"
        />
    <info.hoang8f.widget.FButton
        app:buttonColor="@color/colorWhite"
        android:id="@+id/btn_RetrievePassword"
        android:layout_margin="20dp"
        android:layout_below="@id/edt_EmailForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve password"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textAllCaps="false"/>

</RelativeLayout>