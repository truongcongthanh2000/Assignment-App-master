<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="10dp"
    android:paddingLeft="16dp"

    android:background="@drawable/img">


    <TextView
        android:id="@+id/edt_restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Your Restaurant"
        android:textColor="@color/colorWhite"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/hipsteria"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="30dp"
        >

        <Button
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnListFood"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_blue"
            android:text="List of food"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <Button
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnAddFood"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_blue"
            android:text="Adding food"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <Button
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnTableOfOrder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_blue"
            android:text="Table of order"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <Button
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnUpdateInfoRestaurant"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_blue"
            android:text="Update information"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <Button
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnChangePassRestaurant"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_blue"
            android:text="Change password"
            android:textSize="20sp"
            android:textAllCaps="false"/>


    </LinearLayout>

    <ImageView
        android:tint="@color/colorWhite"
        android:id="@+id/btnLogOutRestaurant"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/off"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>