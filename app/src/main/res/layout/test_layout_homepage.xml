<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="0dp"
    android:id="@+id/view_food"
    >
    <LinearLayout
        android:background="#11DCFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvtenKhachHang"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="Welcome Truong Cong Thanh"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="547dp"
        android:background="#a6dfdfdf"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/homepage_view"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_page" />

        <ImageView
            android:id="@+id/cart_view"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/homepage_view"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/user_view"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/cart_view"
            android:src="@drawable/user" />
    </RelativeLayout>
</LinearLayout>