<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="40dp"
    android:paddingLeft="16dp"
    android:background="@drawable/img"
    android:paddingRight="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Restaurant"
        android:layout_centerHorizontal="true"
        android:textSize="70dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:fontFamily="@font/lovepen"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Restaurant"
            android:textColorHint="#FFFFFF"
            android:id="@+id/edtEmail_restaurant"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:inputType="textEmailAddress"
            app:met_baseColor="@color/colorWhite"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_singleLineEllipsis="true"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="@dimen/size10dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#FAF8F8"
            android:id="@+id/edtPass_restaurant"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:inputType="textPassword"
            app:met_baseColor="@color/colorWhite"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_minCharacters="6"
            app:met_singleLineEllipsis="true"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/size10dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Restaurant's name"
            android:textColorHint="#FAF8F8"
            android:id="@+id/edtName_restaurant"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:inputType="text"
            app:met_baseColor="@color/colorWhite"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_singleLineEllipsis="true"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="@dimen/size10dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:textColorHint="#FAF8F8"
            android:id="@+id/edtPhone_restaurant"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:inputType="phone"
            app:met_baseColor="@color/colorWhite"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_singleLineEllipsis="true"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/size10dp"
            app:met_maxCharacters="11"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:textColorHint="#FAF8F8"
            android:id="@+id/edtLocation_restaurant"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:inputType="text"
            app:met_baseColor="@color/colorWhite"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorWhite"
            app:met_singleLineEllipsis="true"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/size10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_gravity="center"
                android:id="@+id/btnAdd_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size10dp"
                android:layout_weight="1"
                android:background="@drawable/border_blue"
                android:text="Add"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textAllCaps="false"/>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>

